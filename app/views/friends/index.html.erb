
<% content_for :title, "Friends" %>

<% if user_signed_in? %>
<h1>Friends</h1>
  <div id="friends">
    <table class='table table-striped table-bordered table-hover'>
      <thead class='table-dark'>
        <tr>
          <th scope='col'>Full Name</th>
          <th scope='col'>Email</th>
          <th scope='col'>Phone</th>
          <th scope='col'>Twitter</th>
          <th scope='col'></th>

        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>

            <td><%= button_to "Destroy", friend, method: :delete , class:"btn btn-outline-danger btn-sm" %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Welcome to the Friend App w/ Ruby on Rails</h1>
