<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group pb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:'Email', display: 'block' %>
  </div>

  <div class="field form-group pb-3">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:'Password', display: 'block' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check form-group pb-3">
      <%= f.check_box :remember_me, class:'form-check-input'%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions d-flex justify-content-start gap-3">
    <%= f.submit "Log in", class:'btn btn-primary' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

